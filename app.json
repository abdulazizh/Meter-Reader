{
  "expo": {
    "name": "قراءات العدادات",
    "slug": "meter-reader-iraq",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "meterreader",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.meterreader.iraq"
    },
    "android": {
      "adaptiveIcon": {
        "backgroundColor": "#1B5E20",
        "foregroundImage": "./assets/images/android-icon-foreground.png",
        "backgroundImage": "./assets/images/android-icon-background.png",
        "monochromeImage": "./assets/images/android-icon-monochrome.png"
      },
      "edgeToEdgeEnabled": true,
      "predictiveBackGestureEnabled": false,
      "package": "com.meterreader.iraq"
    },
    "web": {
      "output": "single",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/splash-icon.png",
          "imageWidth": 200,
          "resizeMode": "contain",
          "backgroundColor": "#1B5E20",
          "dark": {
            "backgroundColor": "#1B5E20"
          }
        }
      ],
      "expo-web-browser",
      [
        "expo-camera",
        {
          "cameraPermission": "السماح بالوصول للكاميرا لالتقاط صور العدادات"
        }
      ],
      [
        "expo-image-picker",
        {
          "photosPermission": "السماح بالوصول للصور لاختيار صور العدادات"
        }
      ]
    ],
    "experiments": {
      "reactCompiler": true
    }
  }
}
